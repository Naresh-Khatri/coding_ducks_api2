{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "CommonJS",
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ES2021.Promise", "ES2021.String", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["./types"]
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
